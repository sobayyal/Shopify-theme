{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bestsellers-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    text-align: center;
    background-color: {{ block.settings.background_color }};
  }

  .ai-bestsellers-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-bestsellers-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    letter-spacing: 0.5px;
  }

  .ai-bestsellers-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 48px;
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-bestsellers-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 32px;
    margin-top: 48px;
  }

  .ai-bestsellers-product-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-bestsellers-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 16px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f8f8f8;
  }

  .ai-bestsellers-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-bestsellers-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-bestsellers-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-bestsellers-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    text-decoration: none;
  }

  .ai-bestsellers-product-title-{{ ai_gen_id }}:hover {
    color: {{ block.settings.product_title_hover_color }};
  }

  .ai-bestsellers-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 500;
  }

  .ai-bestsellers-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    background: rgba(255, 255, 255, 0.9);
    padding: 4px 8px;
    border-radius: 4px;
  }

  @media screen and (max-width: 768px) {
    .ai-bestsellers-section-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-bestsellers-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      margin-top: 32px;
    }

    .ai-bestsellers-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-bestsellers-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
      margin-bottom: 32px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-bestsellers-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
{% endstyle %}

<div class="ai-bestsellers-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-bestsellers-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-bestsellers-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <p class="ai-bestsellers-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}

    <div class="ai-bestsellers-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}

        <div class="ai-bestsellers-product-{{ ai_gen_id }}">
          {% if product != blank %}
            <a href="{{ product.url }}" class="ai-bestsellers-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-bestsellers-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {% else %}
                <div class="ai-bestsellers-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a><a href="{{ product.url }}" class="ai-bestsellers-product-title-{{ ai_gen_id }}">
              {{ product.title }}
            </a>

            <div class="ai-bestsellers-product-price-{{ ai_gen_id }}">
              {% if product.compare_at_price > product.price %}
                <span style="text-decoration: line-through; opacity: 0.6;">{{ product.compare_at_price | money }}</span>
                <span style="color: {{ block.settings.sale_price_color }};">{{ product.price | money }}</span>
              {% else %}
                {{ product.price | money }}
              {% endif %}
            </div>
          {% else %}
            <div class="ai-bestsellers-image-wrapper-{{ ai_gen_id }}" style="position: relative;">
              <div class="ai-bestsellers-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
              <div class="ai-bestsellers-empty-state-{{ ai_gen_id }}">
                Select product {{ i }}
              </div>
            </div>

            <div class="ai-bestsellers-product-title-{{ ai_gen_id }}" style="opacity: 0.5;">
              Product {{ i }}
            </div>

            <div class="ai-bestsellers-product-price-{{ ai_gen_id }}" style="opacity: 0.5;">
              $0.00
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

