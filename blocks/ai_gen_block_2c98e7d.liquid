{% assign travel_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  @media(max-width:768px){
  .travel-style-hero-content-{{ travel_gen_id }}{
   position: absolute;
   bottom:10px;
  }
  }
  .travel-style-hero-section-{{ travel_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .travel-style-hero-background-{{ travel_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .travel-style-hero-background-placeholder-{{ travel_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .travel-style-hero-background-placeholder-{{ travel_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .travel-style-hero-empty-state-{{ travel_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 2;
  }

  .travel-style-hero-overlay-{{ travel_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }});
    z-index: 2;
  }

  .travel-style-hero-content-{{ travel_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_width }}px;
    padding: 0 20px;
  }

  .travel-style-hero-headline-{{ travel_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 500;
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.2;
  }

  .travel-style-hero-subtext-{{ travel_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    margin: 0 0 {{ block.settings.button_spacing }}px;
    line-height: 1.5;
    opacity: 0.9;
  }

  .travel-style-hero-button-{{ travel_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background }};
  }

  .travel-style-hero-button-{{ travel_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .travel-style-hero-section-{{ travel_gen_id }} {
      height: {{ block.settings.section_height_mobile }}px;
    }

    .travel-style-hero-headline-{{ travel_gen_id }} {
      font-size: {{ block.settings.headline_size_mobile }}px;
    }

    .travel-style-hero-subtext-{{ travel_gen_id }} {
      font-size: {{ block.settings.subtext_size_mobile }}px;
    }

    .travel-style-hero-button-{{ travel_gen_id }} {
      font-size: {{ block.settings.button_font_size_mobile }}px;
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
    }
  }
{% endstyle %}

<section class="travel-style-hero-section-{{ travel_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.hero_image %}
    <img
      src="{{ block.settings.hero_image | image_url: width: 2000 }}"
      alt="{{ block.settings.hero_image.alt | escape }}"
      class="travel-style-hero-background-{{ travel_gen_id }}"
      loading="lazy"
      width="{{ block.settings.hero_image.width }}"
      height="{{ block.settings.hero_image.height }}"
    >
  {% else %}
    <div class="travel-style-hero-background-placeholder-{{ travel_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="travel-style-hero-empty-state-{{ travel_gen_id }}">
        Add a hero background image
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="travel-style-hero-overlay-{{ travel_gen_id }}"></div>
  {% endif %}

  <div class="travel-style-hero-content-{{ travel_gen_id }}">
    {% if block.settings.headline != blank %}
      <h1 class="travel-style-hero-headline-{{ travel_gen_id }}">
        {{ block.settings.headline }}
      </h1>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <p class="travel-style-hero-subtext-{{ travel_gen_id }}">
        {{ block.settings.subtext }}
      </p>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="travel-style-hero-button-{{ travel_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

