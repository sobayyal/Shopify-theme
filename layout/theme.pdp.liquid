document.addEventListener('DOMContentLoaded', function () {
    // Helper function to get the variant ID from the URL
    const getVariantIdFromUrl = () => {
        const params = new URLSearchParams(window.location.search);
        return params.get('variant'); // Extract the variant parameter
    };

    // Function to toggle visibility of blocks
    const toggleBlocks = (variantId) => {
        const blocks = document.querySelectorAll('.variant-block');
        let defaultBlockDisplayed = false;

        blocks.forEach(block => {
            const isDefault = block.dataset.default === 'true'; // Check if it's the default block

            if (variantId) {
                // Show matching block if variantId exists
                if (block.dataset.variantId === variantId) {
                    block.style.display = 'block';
                } else {
                    block.style.display = 'none';
                }
            } else if (isDefault && !defaultBlockDisplayed) {
                // Show the default block if no variantId and not already displayed
                block.style.display = 'block';
                defaultBlockDisplayed = true;
            } else {
                // Hide all non-matching and non-default blocks
                block.style.display = 'none';
            }
        });
    };

    // Observe for real-time URL changes
    const observeUrlChanges = () => {
        let lastUrl = window.location.href;

        setInterval(() => {
            const currentUrl = window.location.href;
            if (currentUrl !== lastUrl) {
                lastUrl = currentUrl;
                const variantId = getVariantIdFromUrl();
                toggleBlocks(variantId); // Update blocks dynamically
            }
        }, 100); // Check every 100ms for URL changes
    };

    // Get initial variant ID and toggle blocks
    const initialVariantId = getVariantIdFromUrl();
    toggleBlocks(initialVariantId);

    // Start observing URL changes
    observeUrlChanges();
});
</script>


  
