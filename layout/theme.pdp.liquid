  // Function to handle form submission for add to cart buttons
  function handleAddToCartSubmit() {
    const addToCartForms = document.querySelectorAll('form[action="/cart/add"]');
    
    addToCartForms.forEach(form => {
      form.addEventListener('submit', function(e) {
        const addToCartButton = form.querySelector('#add-to-cart-button');
        
        // Only apply temp disabled to add-to-cart buttons, not sold-out buttons
        if (addToCartButton) {
          // We can still add the visual disabled class for feedback
          addToCartButton.classList.add('button--disabled');
          
          // But we won't add the actual disabled attribute
          // This prevents the issue with the attribute persisting
          
          // Reset the button after a short delay (for visual feedback)
          setTimeout(() => {
            addToCartButton.classList.remove('button--disabled');
          }, 1000);
        }
      });
    });
  }
  
  // Initialize the handlers
  handleAddToCartSubmit();
  
  // Re-initialize handlers after Shopify section updates
  document.addEventListener('shopify:section:load', handleAddToCartSubmit);
});
