     <script>
document.addEventListener("DOMContentLoaded", function () {
    // Helper function to get the variant ID from the URL
    const getVariantIdFromUrl = () => {
        const params = new URLSearchParams(window.location.search);
        return params.get("variant"); // Extract the variant parameter
    };

    // Function to toggle section visibility based on variant ID
    const toggleSections = (variantId) => {
        const sections = document.querySelectorAll("#dynamic-product-slider");

        sections.forEach(section => {
            const sectionVariantId = section.dataset.variantId;
            const isDefault = section.dataset.default === "true";

            if (variantId) {
                section.style.display = sectionVariantId === variantId ? "block" : "none";
            } else {
                section.style.display = isDefault ? "block" : "none";
            }
        });
    };

    // Function to initialize the slider
    const initializeSlider = (section) => {
        const sliderContainer = section.querySelector(".slider-container");
        const sliderItems = section.querySelectorAll(".slider-item");
        const leftArrow = section.querySelector(".left-arrow");
        const rightArrow = section.querySelector(".right-arrow");

        if (!sliderContainer || sliderItems.length === 0 || !leftArrow || !rightArrow) {
            console.warn("Required elements missing in this slider.");
            return;
        }

        // Calculate maximum scrollable distance
        const getMaxScrollLeft = () => sliderContainer.scrollWidth - sliderContainer.clientWidth;

        // Update arrow visibility
        const updateArrowVisibility = () => {
            const maxScrollLeft = getMaxScrollLeft();
            leftArrow.style.display = sliderContainer.scrollLeft > 0 ? "block" : "none";
            rightArrow.style.display =
                Math.ceil(sliderContainer.scrollLeft) >= maxScrollLeft ? "none" : "block";
        };

        // Scroll the slider
        const scrollSlider = (direction) => {
            const itemWidth = sliderItems[0].offsetWidth + parseFloat(getComputedStyle(sliderItems[0]).marginRight);
            const maxScrollLeft = getMaxScrollLeft();
            let targetScrollLeft = sliderContainer.scrollLeft;

            if (direction === "left") {
                targetScrollLeft = Math.max(0, targetScrollLeft - itemWidth);
            } else if (direction === "right") {
                targetScrollLeft = Math.min(maxScrollLeft, targetScrollLeft + itemWidth);
            }

            sliderContainer.scrollTo({
                left: targetScrollLeft,
                behavior: "smooth",
            });

            // Update arrow visibility after the scroll ends
            setTimeout(updateArrowVisibility, 300);
        };

        // Attach event listeners
        leftArrow.addEventListener("click", () => scrollSlider("left"));
        rightArrow.addEventListener("click", () => scrollSlider("right"));
        sliderContainer.addEventListener("scroll", updateArrowVisibility);

        // Initial visibility update
        updateArrowVisibility();
    };

    // Reset sliders for visible sections
    const resetSliders = () => {
        const visibleSections = document.querySelectorAll("#dynamic-product-slider[style='display: block;']");

        visibleSections.forEach(section => {
            if (!section.dataset.initialized) {
                initializeSlider(section);
                section.dataset.initialized = "true"; // Mark as initialized
            }
        });
    };

    // Function to observe URL changes for real-time updates
    const observeUrlChanges = () => {
        let lastUrl = window.location.href;

        setInterval(() => {
            const currentUrl = window.location.href;
            if (currentUrl !== lastUrl) {
                lastUrl = currentUrl;
                const variantId = getVariantIdFromUrl();
                toggleSections(variantId);
                resetSliders();
            }
        }, 300); // Check every 300ms for URL changes
    };

    // Initialize
    const initialVariantId = getVariantIdFromUrl();
    toggleSections(initialVariantId);
    resetSliders();
    observeUrlChanges();
});
</script>
    
