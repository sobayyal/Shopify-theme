{{ 'section-craft-grid.css' | asset_url | stylesheet_tag }}

<div class="craft-grid" 
     style="--section-bg-color: {{ section.settings.background_color }};
            --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
            --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
            --section-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
            --section-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
            --section-heading-color: {{ section.settings.heading_color }};
            --section-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
            --section-heading-size-desktop: {{ section.settings.heading_size_desktop }}px;
            --section-heading-weight: {{ section.settings.heading_font_weight }};
            --section-description-color: {{ section.settings.description_color }};
            --section-description-size-mobile: {{ section.settings.description_size_mobile }}px;
            --section-description-size-desktop: {{ section.settings.description_size_desktop }}px;
            --block-title-color: {{ section.settings.block_title_color }};
            --block-title-size-mobile: {{ section.settings.block_title_size_mobile }}px;
            --block-title-size-desktop: {{ section.settings.block_title_size_desktop }}px;
            --block-title-weight: {{ section.settings.block_title_font_weight }};
            --block-description-color: {{ section.settings.block_description_color }};
            --block-description-size-mobile: {{ section.settings.block_description_size_mobile }}px;
            --block-description-size-desktop: {{ section.settings.block_description_size_desktop }}px;">
  
  <div class="craft-grid__container page-width">
    {%- comment -%} Section Header {%- endcomment -%}
    {%- if section.settings.heading != blank or section.settings.description != blank -%}
      <div class="craft-grid__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="craft-grid__heading">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="craft-grid__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- comment -%} Craft Items Grid {%- endcomment -%}
    {%- if section.blocks.size > 0 -%}
      <div class="craft-grid__items craft-grid__items--{{ section.settings.columns_desktop }}-col">
        {%- for block in section.blocks -%}
          <div class="craft-grid__item" {{ block.shopify_attributes }}>
            
            {%- comment -%} Image {%- endcomment -%}
            {%- if block.settings.image != blank -%}
              <div class="craft-grid__image-wrapper {% if block.settings.image != blank and block.settings.image_mobile != blank %}has-both-images{% endif %}">
                <picture class="craft-grid__picture">
                  {%- if block.settings.image_mobile != blank -%}
                    {{- block.settings.image_mobile | image_url: width: 750 | image_tag:
                      loading: 'lazy',
                      class: 'craft-grid__img craft-grid__img--mobile',
                      widths: '375, 550, 750',
                      sizes: '(max-width: 749px) 100vw, 500px'
                    -}}
                  {%- endif -%}
                  {%- if block.settings.image != blank -%}
                    {{- block.settings.image | image_url: width: 800 | image_tag:
                      loading: 'lazy',
                      class: 'craft-grid__img craft-grid__img--desktop',
                      widths: '375, 550, 750, 800',
                      sizes: '(min-width: 1200px) 400px, (min-width: 990px) 33vw, (min-width: 750px) 45vw, 100vw'
                    -}}
                  {%- elsif block.settings.image_mobile != blank -%}
                    {{- block.settings.image_mobile | image_url: width: 750 | image_tag:
                      loading: 'lazy',
                      class: 'craft-grid__img',
                      widths: '375, 550, 750',
                      sizes: '100vw'
                    -}}
                  {%- endif -%}
                </picture>
              </div>
            {%- else -%}
              <div class="craft-grid__image-wrapper">
                {{ 'image' | placeholder_svg_tag: 'craft-grid__placeholder' }}
              </div>
            {%- endif -%}

            {%- comment -%} Content {%- endcomment -%}
            <div class="craft-grid__content">
              {%- if block.settings.title != blank -%}
                <h3 class="craft-grid__item-title">
                  {{ block.settings.title }}
                </h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <div class="craft-grid__item-description">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Craft Grid",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Craft"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Control, precision, and relentless testing. We don't just make luggage; we engineer experiences."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columns on Desktop",
      "options": [
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        },
        {
          "value": "4",
          "label": "4 Columns"
        }
      ],
      "default": "3"
    },
    {
      "type": "header",
      "content": "Section Heading Typography"
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "label": "Heading Size (Desktop)",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "label": "Heading Size (Mobile)",
      "min": 18,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "select",
      "id": "heading_font_weight",
      "label": "Heading Font Weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "description_size_desktop",
      "label": "Description Size (Desktop)",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "description_size_mobile",
      "label": "Description Size (Mobile)",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "header",
      "content": "Block Item Typography"
    },
    {
      "type": "range",
      "id": "block_title_size_desktop",
      "label": "Block Title Size (Desktop)",
      "min": 14,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "block_title_size_mobile",
      "label": "Block Title Size (Mobile)",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "select",
      "id": "block_title_font_weight",
      "label": "Block Title Font Weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "block_description_size_desktop",
      "label": "Block Description Size (Desktop)",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "block_description_size_mobile",
      "label": "Block Description Size (Mobile)",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 13
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Section Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Section Description Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "block_title_color",
      "label": "Block Title Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "block_description_color",
      "label": "Block Description Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "craft_item",
      "name": "Craft Item",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (Desktop)"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image (Mobile)",
          "info": "Optional. Falls back to desktop image if not set"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Craft Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Add a description for this craft item."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Craft Grid",
      "blocks": [
        {
          "type": "craft_item",
          "settings": {
            "title": "Premium Materials",
            "description": "Hand-selected leather, aerospace-grade aluminum, and precision-engineered components."
          }
        },
        {
          "type": "craft_item",
          "settings": {
            "title": "Rigorous Testing",
            "description": "Every design endures thousands of cycles of real-world stress testing before production."
          }
        },
        {
          "type": "craft_item",
          "settings": {
            "title": "Human Touch",
            "description": "Master craftspeople bring decades of experience to every piece we create."
          }
        }
      ]
    }
  ]
}
{% endschema %}