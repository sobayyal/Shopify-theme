{% assign ai_gen_id = section.id | replace: '_', '' | replace: '-', '' | downcase %}

{% style %}
  .store-locator-faq-section-{{ ai_gen_id }} {
    padding: {{ section.settings.section_padding }}px 0;
    background-color: {{ section.settings.background_color }};
    display: block;
  }

  .store-locator-faq-container-{{ ai_gen_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .store-locator-faq-heading-{{ ai_gen_id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin: 0 0 {{ section.settings.heading_spacing }}px 0;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 500 !important;
  }

  .store-locator-faq-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.item_spacing }}px;
  }

  .store-locator-faq-item-{{ ai_gen_id }} {
    border: 1px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.border_radius }}px;
    background-color: {{ section.settings.item_background }};
    overflow: hidden;
    transition: box-shadow 0.3s ease;
  }

  .store-locator-faq-item-{{ ai_gen_id }}:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .store-locator-faq-question-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ section.settings.question_padding }}px;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: {{ section.settings.question_color }};
    font-size: {{ section.settings.question_size }}px;
    font-weight: {{ section.settings.question_weight }};
    transition: background-color 0.3s ease;
  }

  .store-locator-faq-question-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.question_hover_bg }};
  }

  .store-locator-faq-question-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ section.settings.focus_color }};
    outline-offset: -2px;
  }

  .store-locator-faq-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
    color: {{ section.settings.icon_color }};
    flex-shrink: 0;
    margin-left: 16px;
  }

  .store-locator-faq-item-{{ ai_gen_id }}.active .store-locator-faq-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .faq-answer-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    background-color: {{ section.settings.answer_background }};
  }

  .faq-answer-{{ ai_gen_id }}.active {
    max-height: 500px;
    padding: 0 {{ section.settings.answer_padding }}px {{ section.settings.answer_padding }}px;
  }

  .faq-answer-content-{{ ai_gen_id }} {
    color: {{ section.settings.answer_color }};
    font-size: {{ section.settings.answer_size }}px;
    line-height: 1.6;
  }

  .faq-answer-content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .faq-answer-content-{{ ai_gen_id }} p + p {
    margin-top: 12px;
  }

  @media screen and (max-width: 749px) {
    .store-locator-faq-section-{{ ai_gen_id }} {
      padding: {{ section.settings.section_padding | times: 0.7 }}px 0;
    }

    .store-locator-faq-heading-{{ ai_gen_id }} {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    .store-locator-faq-question-{{ ai_gen_id }} {
      padding: {{ section.settings.question_padding | times: 0.8 }}px;
      font-size: {{ section.settings.question_size | times: 0.9 }}px;
    }

    .faq-answer-{{ ai_gen_id }}.active {
      padding: 0 {{ section.settings.answer_padding | times: 0.8 }}px {{ section.settings.answer_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<store-faq-accordion-{{ ai_gen_id }} class="store-locator-faq-section-{{ ai_gen_id }}">
  <div class="store-locator-faq-container-{{ ai_gen_id }}">
    {% if section.settings.section_heading != blank %}
      <h2 class="store-locator-faq-heading-{{ ai_gen_id }}">{{ section.settings.section_heading }}</h2>
    {% endif %}

    <div class="store-locator-faq-list-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign question_key = 'faq_' | append: i | append: '_question'
          assign answer_key = 'faq_' | append: i | append: '_answer'
          assign question = section.settings[question_key]
          assign answer = section.settings[answer_key]
        %}

        {% if question != blank %}
          <div class="store-locator-faq-item-{{ ai_gen_id }}" data-faq-item="{{ i }}">
            <button
              class="store-locator-faq-question-{{ ai_gen_id }}"
              aria-expanded="false"
              aria-controls="faq-answer-{{ ai_gen_id }}-{{ i }}"
              data-faq-button="{{ i }}"
            >
              <span>{{ question }}</span>
              <svg class="store-locator-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6,9 12,15 18,9"></polyline>
              </svg>
            </button>
            <div
              class="faq-answer-{{ ai_gen_id }}"
              id="faq-answer-{{ ai_gen_id }}-{{ i }}"
              data-faq-answer="{{ i }}"
            >
              {% if answer != blank %}
                <div class="faq-answer-content-{{ ai_gen_id }}">{{ answer }}</div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</store-faq-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class StoreFaqAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.faqItems = this.querySelectorAll('.store-locator-faq-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.faqItems.forEach((item) => {
          const button = item.querySelector('.store-locator-faq-question-{{ ai_gen_id }}');
          const answer = item.querySelector('.faq-answer-{{ ai_gen_id }}');

          button.addEventListener('click', () => {
            const isActive = item.classList.contains('active');

            if (isActive) {
              this.closeFaq(item, button, answer);
            } else {
              this.openFaq(item, button, answer);
            }
          });
        });
      }

      openFaq(item, button, answer) {
        item.classList.add('active');
        answer.classList.add('active');
        button.setAttribute('aria-expanded', 'true');
      }

      closeFaq(item, button, answer) {
        item.classList.remove('active');
        answer.classList.remove('active');
        button.setAttribute('aria-expanded', 'false');
      }
    }

    customElements.define('store-faq-accordion-{{ ai_gen_id }}', StoreFaqAccordion{{ ai_gen_id }});
  })();
</script>

