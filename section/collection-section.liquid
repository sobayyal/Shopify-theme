  "name": "Shop by Categories",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Shop by Categories",
      "label": "Section Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section Subheading",
      "info": "Optional subheading text"
    },
    {
      "type": "color",
      "id": "background_color",
