<div class="affiliate-section">
  <div class="affiliate-content">
    <img src="{{ section.settings.logo_image | img_url: 'x300' }}" alt="TikTok for Business Logo" class="affiliate-logo">
    
    <h2 class="affiliate-heading">{{ section.settings.heading_text }}</h2>
    
    <div class="affiliate-image-wrapper desktop-hidden">
      <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="{{ section.settings.image_alt_text }}" class="affiliate-image">
    </div>
    
    <div class="affiliate-subheading">{{ section.settings.subheading_text }}</div>
    
    <div class="affiliate-buttons">
      <a href="{{ section.settings.affiliate_link }}" target="_blank" class="affiliate-button primary-button">
        {{ section.settings.affiliate_button_text }}
      </a>
      
      <a href="{{ section.settings.agency_link }}" target="_blank" class="affiliate-button secondary-button">
        {{ section.settings.agency_button_text }}
      </a>
    </div>
  </div>
  
  <div class="affiliate-image-wrapper mobile-hidden">
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="{{ section.settings.image_alt_text }}" class="affiliate-image">
  </div>
</div>

<!-- Schema -->
{% schema %}
{
  "name": "TikTok Affiliate Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Become a TikTok Ads Affiliate"
    },
    {
      "type": "richtext",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "<p>Affiliate partners and agency partners apply to the separate links below.</p><p> Business Center ID required for Agency program.</p>"
    },
    {
      "type": "text",
      "id": "affiliate_button_text",
      "label": "Affiliate Button Text",
      "default": "Join as affiliate"
    },
    {
      "type": "url",
      "id": "affiliate_link",
      "label": "Affiliate Link"
    },
    {
      "type": "text",
      "id": "agency_button_text",
      "label": "Agency Button Text",
      "default": "Join as agency"
    },
    {
      "type": "url",
      "id": "agency_link",
      "label": "Agency Link"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "image_alt_text",
      "label": "Image Alt Text"
    }
  ],
  "presets": [
    {
      "name": "TikTok Affiliate Section"
    }
  ]
}
{% endschema %}


