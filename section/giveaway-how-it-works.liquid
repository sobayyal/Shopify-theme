{% style %}
  .Nobl-hiw-section {
    background-color: {{ section.settings.background_color }};
    padding: 0;
    position: relative;
  }

  .Nobl-hiw-background {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .Nobl-hiw-overlay {
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .Nobl-hiw-wrapper {
    padding-top: 40px;
    padding-bottom: 60px;
       

  }

  .Nobl-hiw-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 500;
    color: {{ section.settings.title_color }};
    margin-bottom: 50px;
    letter-spacing: 1px;
  }

  .Nobl-hiw-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .Nobl-hiw-card {
    text-align: left;
  }

  .Nobl-hiw-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 3px solid {{ section.settings.circle_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    font-weight: 500;
    color: {{ section.settings.circle_color }};
    margin-bottom: 20px;
  }

  .Nobl-hiw-card-title {
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .Nobl-hiw-card-text {
    font-size: {{ section.settings.card_text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    opacity: 0.85;
  }
  @media(min-width: 767px){
    .Nobl-hiw-wrapper {
        max-width: 80%;
    margin: auto;
  }

  }

  @media (max-width: 768px) {
    .Nobl-hiw-wrapper {
      padding-top: 40px;
      padding-bottom: 40px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .Nobl-hiw-title {
      font-size: {{ section.settings.title_size | minus: 8 }}px;
      margin-bottom: 35px;
    }

    .Nobl-hiw-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .Nobl-hiw-number {
      width: 40px;
      height: 40px;
      font-size: 24px;
      border-width: 2px;
      margin-bottom: 15px;
    }

    .Nobl-hiw-card-title {
      font-size: {{ section.settings.card_title_size | minus: 2 }}px;
      margin-bottom: 10px;
    }

    .Nobl-hiw-card-text {
      font-size: {{ section.settings.card_text_size | minus: 1 }}px;
    }
  }
{% endstyle %}

<section class="Nobl-hiw-section">
  <div class="Nobl-hiw-background"
    {% if section.settings.background_image != blank %}
      style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"
    {% endif %}
  >
    <div class="Nobl-hiw-overlay">
      <div class="">
        <div class="Nobl-hiw-wrapper">
          {% if section.settings.title != blank %}
            <h2 class="h2 text-center" >{{ section.settings.title }}</h2>
          {% endif %}

          <div class="Nobl-hiw-grid">
            {% for block in section.blocks %}
              <div class="Nobl-hiw-card" {{ block.shopify_attributes }}>
                <div class="Nobl-hiw-number">{{ forloop.index }}</div>
                
                {% if block.settings.card_title != blank %}
                  <h3 class="Nobl-hiw-card-title">{{ block.settings.card_title }}</h3>
                {% endif %}
                
                {% if block.settings.card_text != blank %}
                  <p class="Nobl-hiw-card-text">{{ block.settings.card_text }}</p>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How to Enter"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Title Font Size",
      "default": 32
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#2d2d2d"
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5cdc7"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 0
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "color",
      "id": "circle_color",
      "label": "Circle & Number Color",
      "default": "#2d2d2d"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#2d2d2d"
    },
    {
      "type": "range",
      "id": "card_title_size",
      "min": 14,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Card Title Font Size",
      "default": 18
    },
    {
      "type": "range",
      "id": "card_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Card Text Font Size",
      "default": 14
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Shop Caraway"
        },
        {
          "type": "textarea",
          "id": "card_text",
          "label": "Card Description",
          "default": "Every $1 = 1 entry to win. Look out for products with entry multipliers!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "card_title": "Shop Caraway",
            "card_text": "Every $1 = 1 entry to win. Look out for products with entry multipliers!"
          }
        },
        {
          "type": "feature",
          "settings": {
            "card_title": "Complete Your Purchase",
            "card_text": "Bigger carts = bonus entries. Stock up to secure more chances to win."
          }
        },
        {
          "type": "feature",
          "settings": {
            "card_title": "Earn Entries",
            "card_text": "One lucky winner will receive a dream kitchen makeover, or $100,000 cash!"
          }
        }
      ]
    }
  ]
}
{% endschema %}