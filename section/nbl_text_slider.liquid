<section class="text-slider-section">
  <div class="text-slider-wrapper">
    <div class="text-slider-track">
      {% for i in (1..6) %}
        {% for block in section.blocks %}
          {% if block.type == 'text_item' %}
            <span>{{ block.settings.text }}</span>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>




{% schema %}
  {
  "name": "Text Slider",
  "settings": [],
  "blocks": [
    {
      "type": "text_item",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "WARRANTY"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Text Slider",
      "category": "Custom"
    }
  ]
}

{% endschema %}