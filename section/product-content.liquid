  <h2 class="font-32">{{ section.settings.title }}</h2>
  <div class="noble-carry-on-content">
    <div class="noble-carry-on-image">
      {% if section.settings.product_image %}
        <img src="{{ section.settings.product_image | img_url: '700x' }}" alt="Noble Carry-On">
     
      {% endif %}
    </div>
    
  </div>
  <div  class="f-star"><svg width="102" height="18" viewBox="0 0 102 18" fill="none" xmlns="http://www.w3.org/2000/svg">
