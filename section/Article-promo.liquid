<!-- promo-section-with-timer.liquid -->
<section class="container container--xs">
  <div class="promo-section">
    <!-- Promo Image Section -->
    <div class="promo-sec-width">
    <div class="promo-section__image">
      <img src="{{ section.settings.promo_image | img_url: 'large' }}" alt="Promo Image">
    </div>
    
    <!-- Promo Text Section -->
    <div class="promo-section__text">
      <div class="sec-promo-gift">
        <hr>
      <p class="promo-gifts">{{ section.settings.subtext }}</p>
        <hr>
      </div>
      <div class="heading__text">
      <h2> <span class="promo-heading">{{ section.settings.promo_heading }} </span> <span class="promo-discount">{{ section.settings.promo_discount }} </span> </h2>
      </div>
      <!-- Button -->
      <a href="{{ section.settings.button_link }}" class="custom-btn">
          {{ section.settings.button_text }}
          <span class="btn-icon"><img src="{{ section.settings.promo_btn_icon | img_url: 'small' }}" alt="Button Icon"></span>
        </a>
      
      
      <!-- Countdown Timer -->
<p class="promo-timer">
  <span class="promo-timer-text">DEAL ENDING IN:</span>
  <span class="countdown-condensed__timer" style="display: flex; align-items: center;">
    <countdown-timer class="countdown-condensed__timer" role="timer" aria-label="Deal Ending Countdown" expires-at="{{ section.settings.end_date | date: '%FT%T%:z' }}">
      <span class="countdown-timer-promo" id="countdown-timer-{{ section.id }}" style="display: flex; gap: 1px;">
        <span class="countdown-condensed__timer-item">
          <countdown-timer-flip type="hours" class="custom-countdown-condensed__timer-flip" id="hours">00</countdown-timer-flip>
        </span>
        <span class="countdown-condensed__timer-item custom-separator">:</span>
        <span class="countdown-condensed__timer-item">
          <countdown-timer-flip type="minutes" class="custom-countdown-condensed__timer-flip" id="minutes">00</countdown-timer-flip>
          
        </span>
        <span class="countdown-condensed__timer-item custom-separator">:</span>
        <span class="countdown-condensed__timer-item">
          <countdown-timer-flip type="seconds" class="custom-countdown-condensed__timer-flip" id="seconds">00</countdown-timer-flip>
          
        </span>
      </span>
    </countdown-timer>
  </span>
</p>





      <!-- Risk and Shipping Info -->
      <div class="promo-info">
        <p>Sell Out Risk:<strong> <span style="color: #1c9ad6;">{{ section.settings.sell_out_risk }}</span> </strong></p>
        <p class="promo-info-sep"></p>
        <p> {{ section.settings.shipping_info }} </p>
      </div>
      
      <!-- Guarantee Section -->
      <p class="promo-guarantee">{{ section.settings.guarantee_text }}</p>
    </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Promo Section with Timer",
  "settings": [
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promo Image"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "FREE GIFTS WITH YOUR ORDER"
    },
    {
      "type": "text",
      "id": "promo_heading",
      "label": "Promo Heading",
      "default": "UP TO 56% OFF"
    },
    {
      "type": "text",
      "id": "promo_discount",
      "label": "Promo Discount",
      "default": "FOR A LIMITED TIME ONLY"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Select Scents"
    },
    {
      "type": "image_picker",
      "id": "promo_btn_icon",
      "label": "Button Icon"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "Countdown End Date",
      "default": "2024-12-31T23:59:59Z"
    },
    {
      "type": "text",
      "id": "sell_out_risk",
      "label": "Sell Out Risk",
      "default": "HIGH"
    },
    {
      "type": "text",
      "id": "shipping_info",
      "label": "Shipping Info",
      "default": "FREE Shipping"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee Text",
      "default": "Dermatologist Tested - 100% Money Back Guarantee"
    }
  ],
  "presets": [
    {
      "name": "Promo Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

