{% style %}
  .Nobl-we-section {
    padding: 0;
    position: relative;
  }

  .Nobl-we-banner {
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
  }

  .Nobl-we-banner-desktop {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  
  }

  .Nobl-we-banner-mobile {
    display: none;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .Nobl-we-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }

.Nobl-we-content-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    {% if section.settings.desktop_position == 'center-left' %}
      justify-content: flex-start;
     
    {% elsif section.settings.desktop_position == 'center-center' %}
      justify-content: center;
    {% elsif section.settings.desktop_position == 'center-right' %}
      justify-content: flex-end;
      padding-right: 80px;
    {% endif %}
    align-items: center;
    z-index: 2;
  }
@media(min-width: 767px){
  .Nobl-we-content-wrapper{
     padding-left: 80px;
  }
}
  .Nobl-we-content {
    max-width: 600px;
    padding: 40px;
    text-align:center;
  }

  .Nobl-we-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .Nobl-we-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    color: {{ section.settings.subheading_color }};
    margin-bottom: 25px;
    line-height: 1.6;
  }

  .Nobl-we-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_size }}px;
    font-weight: 600;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
  }

  .Nobl-we-button:hover {
    background: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
    border-color: {{ section.settings.button_hover_border }};
    transform: translateY(-2px);
  }

  .Nobl-we-button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .Nobl-we-button:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .Nobl-we-banner-desktop {
      display: none;
    }

    .Nobl-we-banner-mobile {
      display: block;
    }

    .Nobl-we-content-wrapper {
      justify-content: center;
      {% if section.settings.mobile_position == 'top-center' %}
        align-items: flex-start;
        padding-top: 40px;
      {% elsif section.settings.mobile_position == 'center-center' %}
        align-items: center;
      {% elsif section.settings.mobile_position == 'bottom-center' %}
        align-items: flex-end;
        padding-bottom: 40px;
      {% endif %}
    }

    .Nobl-we-content {
      text-align: center;
      padding: 30px 20px;
    }

    .Nobl-we-heading {
      font-size: {{ section.settings.heading_size | minus: 8 }}px;
      margin-bottom: 12px;
    }

    .Nobl-we-subheading {
      font-size: {{ section.settings.subheading_size | minus: 2 }}px;
      margin-bottom: 20px;
    }

    .Nobl-we-button {
      font-size: {{ section.settings.button_size | minus: 1 }}px;
    }
  }
{% endstyle %}

<section class="Nobl-we-section">
  <div class="Nobl-we-banner">
    {% if section.settings.banner_image_desktop != blank %}
      <img 
        src="{{ section.settings.banner_image_desktop | img_url: 'master' }}" 
        alt="{{ section.settings.heading }}"
        class="Nobl-we-banner-desktop"
      >
    {% else %}
      <div class="Nobl-we-banner-desktop" style="background-color: {{ section.settings.fallback_bg_color }};"></div>
    {% endif %}

    {% if section.settings.banner_image_mobile != blank %}
      <img 
        src="{{ section.settings.banner_image_mobile | img_url: 'master' }}" 
        alt="{{ section.settings.heading }}"
        class="Nobl-we-banner-mobile"
      >
    {% else %}
      <div class="Nobl-we-banner-mobile" style="background-color: {{ section.settings.fallback_bg_color }};"></div>
    {% endif %}

    <div class="Nobl-we-overlay"></div>

    <div class="Nobl-we-content-wrapper">
      <div class="container">
        <div class="Nobl-we-content">
          {% if section.settings.heading != blank %}
            <h2 class="Nobl-we-heading">{{ section.settings.heading }}</h2>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <p class="Nobl-we-subheading">{{ section.settings.subheading }}</p>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="Nobl-we-button">
              {{ section.settings.button_text }}
              {% if section.settings.show_button_arrow %}
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              {% endif %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner with Text",
  "settings": [
    {
      "type": "header",
      "content": "Banner Images"
    },
    {
      "type": "image_picker",
      "id": "banner_image_desktop",
      "label": "Desktop Banner Image",
      "info": "Recommended: 1920x400px"
    },
    {
      "type": "image_picker",
      "id": "banner_image_mobile",
      "label": "Mobile Banner Image",
      "info": "Recommended: 768x400px"
    },
    {
