      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Subheading Font Size",
      "default": 20
    },
    {
      "type": "select",
      "id": "subheading_weight",
      "label": "Subheading Font Weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        }
