      "step": 1,
      "unit": "px",
      "label": "Item title size",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_title_size",
      "min": 16,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Mobile item title size",
      "default": 18
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Description size",
