      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Items spacing",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_items_spacing",
      "min": 20,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Mobile items spacing",
      "default": 30
    },
    {
      "type": "range",
      "id": "item_inner_spacing",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Item inner spacing",
      "default": 16
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
