{% assign visit_store_id = section.id | replace: '_', '' | replace: '-', '' | downcase %}

{% style %}
  .visit-our-store-section-{{ visit_store_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 20px;
    text-align: center;
  }

  .visit-our-store-section-container-{{ visit_store_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .visit-our-store-section-heading-{{ visit_store_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin: 0 0 {{ section.settings.items_spacing }}px 0;
    font-weight: 500;
  }

  .visit-our-store-items-grid-{{ visit_store_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.items_spacing }}px;
    margin-top: {{ section.settings.items_spacing }}px;
  }

  .visit-our-store-items-grid-{{ visit_store_id }} .visit-our-store-item-{{ visit_store_id }}:nth-child(2) .visit-our-store-item-icon-{{ visit_store_id }} img{
   height: 44px !important;
   width: 44px !important;
  }

  .visit-our-store-item-{{ visit_store_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ section.settings.item_inner_spacing }}px;
  }

  .visit-our-store-item-icon-{{ visit_store_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    color: {{ section.settings.icon_color }};
    flex-shrink: 0;
  }

  .visit-our-store-item-icon-{{ visit_store_id }} svg {
    width: 100%;
    height: 100%;
  }

  .visit-our-store-item-icon-{{ visit_store_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .visit-our-store-item-title-{{ visit_store_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: 500;
    margin: 0;
    line-height: 1.3;
  }

  .visit-our-store-item-description-{{ visit_store_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.5;
    margin: 0;
    opacity: 0.9;
  }
    @media screen and (min-width:769px){
      .visit-our-store-section-{{ visit_store_id }}{
        padding: 35px 20px 45px;
      }
    }
  @media screen and (max-width: 768px) {
    .visit-our-store-items-grid-{{ visit_store_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_items_spacing }}px;
    }

    .visit-our-store-section-{{ visit_store_id }} {
      padding: {{ section.settings.mobile_section_padding }}px 20px;
    }

    .visit-our-store-section-heading-{{ visit_store_id }} {
      font-size: {{ section.settings.mobile_heading_size }}px;
      display:flex !important;
      align-content: center;
      justify-content: center;
      align-items: center;
      margin:0 auto !important;
    }
    .visit-our-store-item-icon-{{ visit_store_id }} {
    display: flex;
    justify-content: center;
    }

    .visit-our-store-item-title-{{ visit_store_id }} {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    .visit-our-store-item-description-{{ visit_store_id }} {
      font-size: {{ section.settings.mobile_description_size }}px;
    }
  }
{% endstyle %}

<div class="visit-our-store-section-{{ visit_store_id }}">
  <div class="visit-our-store-section-container-{{ visit_store_id }}">
    {% if section.settings.section_heading != blank %}
      <h2 class="visit-our-store-section-heading-{{ visit_store_id }}">
        {{ section.settings.section_heading }}
      </h2>
    {% endif %}

    <div class="visit-our-store-items-grid-{{ visit_store_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign item_enabled_key = 'item_' | append: i | append: '_enabled'
          assign item_icon_key = 'item_' | append: i | append: '_icon'
          assign item_title_key = 'item_' | append: i | append: '_title'
          assign item_description_key = 'item_' | append: i | append: '_description'

          assign item_enabled = section.settings[item_enabled_key]
          assign item_icon = section.settings[item_icon_key]
          assign item_title = section.settings[item_title_key]
          assign item_description = section.settings[item_description_key]
        %}

        {% if item_enabled %}
          <div class="visit-our-store-item-{{ visit_store_id }}">
            <div class="visit-our-store-item-icon-{{ visit_store_id }}">
              {% if item_icon != blank %}
                <img 
                  src="{{ item_icon | image_url: width: 200 }}" 
                  alt="{{ item_title | escape }}"
                  width="{{ section.settings.icon_size }}"
                  height="{{ section.settings.icon_size }}"
                  loading="lazy"
                >
              {% else %}
                {% case i %}
                  {% when 1 %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a4 4 0 004-4V5z"/>
                    </svg>
                  {% when 2 %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                  {% when 3 %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                {% endcase %}
              {% endif %}
            </div>

            {% if item_title != blank %}
              <h3 class="visit-our-store-item-title-{{ visit_store_id }}">
                {{ item_title }}
              </h3>
            {% endif %}

            {% if item_description != blank %}
              <p class="visit-our-store-item-description-{{ visit_store_id }}">
                {{ item_description }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Why Visit Our Stores?",
  "settings": [
    {
      "type": "header",
      "content": "Section content"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Why Visit Our Stores?"
    },
    {
      "type": "header",
      "content": "Colors"
