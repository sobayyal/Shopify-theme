<!-- Tailwind CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="overflow-hidden tt4b-wrapper tt4b-wrapper--black tt4b-faq-module-renderer __module__ bg-black text-white">
    <div class="md:px-16 md:py-24 px-6 py-16 flex md:flex-row flex-col tt4b-faq-module tt4b-faq-module--black">
        <div class="md:w-2/5 flex-shrink-0 md:mb-0 mb-10">
            <div class="flex flex-col md:pr-24">
                <div class="text-lg font-semibold mb-6">FAQ</div>
                <div>
                    <div class="faq-affiliate_heading" >{{ section.settings.faq_head }}</div>
                    <div class="md:text-lg text-base mt-4">{{ section.settings.faq_subhead }}</div>
                </div>
            </div>
        </div>
        <div class="flex-1">
          {% for block in section.blocks %}
              <div class="tt4b-faq-module-section border-t border-white-700">
                  <div class="flex items-center tt4b-faq-module-section__header" data-toggle="faq-answer-{{ block.id }}">
                      <h3 class="md:text-40 text-30 font-bold my-0 py-5 sec-title whitespace-pre-wrap">{{ block.settings.faq_question }}</h3>
                      <span class="text-razzmatazz min-w-[2rem] md:min-w-[3rem] h-[2rem] md:h-12 tt4b-icon tt4b-icon--plus icon-color text-5xl">
                        <svg width="45" height="45" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="{% if forloop.first %}M6 12H18{% else %}M12 6V18M6 12H18{% endif %}" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </span>
                  </div>
                  <div class="md:pb-16 pb-12 {% if forloop.first == false %}hidden{% endif %}" id="faq-answer-{{ block.id }}">
                      <p class="md:text-lg text-base">{{ block.settings.faq_answer }}</p>
                      {% if block.settings.button-text !=blank %}
                        <a class="inline-table border-solid text-lg leading-none font-semibold text-center max-w-full mt-10 md:mt-6 rtl-rotate180-btn tt4b-simple-button tt4b-simple-button--black tt4b-simple-button--primary tt4b-simple-button--border tt4b-faq-module-section__button" href="{{ block.settings.button-url }}">
                          {{ block.settings.button-text }}
                          <svg aria-hidden="true" width="18" height="18" viewBox="0 0 24 24" class="tt4b-icon" fill="none" xmlns="http://www.w3.org/2000/svg" class="ml-2">
                            <path d="M4 12h16M14 6l6 6-6 6"  stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </a>
                      {% endif %}
                  </div>
              </div>
          {% endfor %}
      </div>
    </div>
</div>
        









<script>
document.querySelectorAll('.tt4b-faq-module-section__header').forEach((header, index) => {
    header.addEventListener('click', () => {
        const answerId = header.getAttribute('data-toggle');
        const answer = document.getElementById(answerId);
        const icon = header.querySelector('svg path');

        // Toggle the answer visibility
        answer.classList.toggle('hidden');

        // Toggle between "plus" and "minus" icon based on visibility
        if (answer.classList.contains('hidden')) {
            // Show "plus" icon
            icon.setAttribute('d', 'M12 6V18M6 12H18');
        } else {
            // Show "minus" icon
            icon.setAttribute('d', 'M6 12H18');
        }
    });

    // Open the first accordion by default
    if (index === 0) {
        const firstAnswer = document.getElementById(header.getAttribute('data-toggle'));
        firstAnswer.classList.remove('hidden'); // Ensure it's visible
        const firstIcon = header.querySelector('svg path');
        firstIcon.setAttribute('d', 'M6 12H18'); // Set to "minus" icon for open state
    }
});

</script>

