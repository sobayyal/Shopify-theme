{% if section.settings.product != blank %}
  {% assign product = section.settings.product %}
  
  {%- style -%}
    .section_bg_{{ section.id }} {
      background-color: #ffffff;
      padding-top: 50px;
      padding-bottom: 50px;
    }
    
    @media (max-width: 991px) {
      .section_bg_{{ section.id }} {
        padding: 0px;
      }
    }
  {%- endstyle -%}

  <!-- MAIN PRODUCT SECTION -->
  <div id="scroll-main-product" class="landing_page_product container_1408 section_bg_{{ section.id }}">
    <div class="container_hk section-{{ section.id }}-padding isolate">
      <div class="landing_product_container">
        
        <!-- LEFT MEDIA SECTION -->
        <div class="media_left">
          <!-- Thumbnail Slider -->
          <div class="landing_product_thumbnails">
            <div class="thumbnail-slider">
              {% for i in (0..9) %}
                {% assign image_key = 'product_image' | append: i %}
                {% assign product_image = section.settings[image_key] %}
                {% if product_image != blank %}
                  <div class="product_image_wrapper {% if i == 0 %}thumb-1{% endif %}">
                    <img class="product_images" alt="{{ product.title }}" src="{{ product_image | image_url }}" loading="eager" width="auto" height="auto" fetchpriority="high" preload="true">
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <!-- Main Slider -->
          <div class="landing_product_media">
            <div class="main-slider">
              {% for i in (0..9) %}
                {% assign image_key = 'product_image' | append: i %}
                {% assign product_image = section.settings[image_key] %}
                {% if product_image != blank %}
                  <div class="product_image_wrapper {% if i == 0 %}prod-main-1{% endif %}">
                    <img class="product_images" alt="{{ product.title }}" src="{{ product_image | image_url }}" loading="eager" width="auto" height="auto" fetchpriority="high" preload="true">
                  </div>
                {% endif %}
              {% endfor %}
            </div>

            <!-- Slick Arrows -->
            <div class="min-navigation">
              <div class="custom-arrow slick-prevs">
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="24" cy="24" r="23" stroke="#000000" stroke-width="2"/>
                  <path d="M19.2928 24.7071C18.9023 24.3166 18.9023 23.6834 19.2928 23.2929L25.6568 16.9289C26.0473 16.5384 26.6804 16.5384 27.071 16.9289C27.4615 17.3195 27.4615 17.9526 27.071 18.3431L21.4141 24L27.071 29.6569C27.4615 30.0474 27.4615 30.6805 27.071 31.0711C26.6804 31.4616 26.0473 31.4616 25.6568 31.0711L19.2928 24.7071ZM20 24V25H19.9999V24V23H20V24Z" fill="#000000"/>
                </svg>
              </div>
              <div class="custom-arrow slick-nexts">
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="24" cy="24" r="23" stroke="#000000" stroke-width="2"/>
                  <path d="M28.7072 24.7071C29.0977 24.3166 29.0977 23.6834 28.7072 23.2929L22.3432 16.9289C21.9527 16.5384 21.3196 16.5384 20.929 16.9289C20.5385 17.3195 20.5385 17.9526 20.929 18.3431L26.5859 24L20.929 29.6569C20.5385 30.0474 20.5385 30.6805 20.929 31.0711C21.3196 31.4616 21.9527 31.4616 22.3432 31.0711L28.7072 24.7071ZM28 24V25H28.0001V24V23H28V24Z" fill="#000000"/>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- RIGHT PRODUCT INFO SECTION -->
        <div class="landing_product_info">
          {% for block in section.blocks %}
            <div class="block-{{ block.type }}">
              {% case block.type %}
                
                {% when 'title' %}
                  <h2 class="rich-text__heading h1">
                    {{ product.title }} 
                    <span class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span>{{ product.price | money }}</span>
                        <span class="original-prics" style="text-decoration: line-through; color: #00000066;">{{ product.compare_at_price | money }}</span>
                      {% else %}
                        {{ product.price | money }}
                      {% endif %}
                    </span>
                  </h2>

                {% when 'reviews' %}
                  <div class="rich-text__text product_rating_lp">
                    <a href="#scroll-review">
                      <img src="{{ section.settings.image | image_url }}" alt="Rating" width="auto" height="auto" loading="lazy">
                      <span>{{ section.settings.text2 | default: '4.7 / 5 14,972 Reviews' }}</span>
                    </a>
                  </div>

                {% when 'description' %}
                  <div class="rich-text__text">
                    <p>{{ product.description | strip_html | truncate: 150 }}</p>
                  </div>

                {% when 'features' %}
                  <div class="features-grid">
                    <div class="features-grid-container">
                      {% for i in (1..4) %}
                        {% assign icon_key = 'icon_' | append: i %}
                        {% assign text_key = 'text_' | append: i %}
                        <div class="feature-item">
                          {% if block.settings[icon_key] %}
                            <img src="{{ block.settings[icon_key] | image_url }}" alt="{{ block.settings[text_key] }}" width="auto" height="auto" loading="eager" fetchpriority="high" class="feature-icon">
                          {% endif %}
                          <span class="feature-label">{{ block.settings[text_key] }}</span>
                        </div>
                      {% endfor %}
                    </div>
                  </div>

                {% when 'variations' %}
                  <div class="color-options">
                    <p>CHOOSE YOUR COLOR: <strong id="selected-color">{{ product.selected_or_first_available_variant.option1 | default: 'BLACK' }}</strong></p>
                    <div>
                      {% for variant in product.variants %}
                        {% assign is_available = variant.available %}
                        <span style="background-color: {{ variant.option1 | downcase }};"
                              class="color-swatch {% unless is_available %}sold-out{% endunless %} {% if variant.option1 == product.selected_or_first_available_variant.option1 %}active{% endif %}"
                              data-variant-id="{{ variant.id }}"
                              data-color-name="{{ variant.option1 }}"
                              data-image="{{ variant.featured_image | image_url }}" id="{{ variant.option1 }}"></span>
                      {% endfor %}
                    </div>
                  </div>

                {% when 'in_stock' %}
                  <div class="order-date">
                    <span class="prefix">{{ block.settings.stock }}</span>
                    <span class="date-text"></span>
                  </div>

                {% when 'add_to_cart' %}
                  <button class="add-to-cart-btn" 
                          data-original="ADD TO CART"
                          data-loadingText="Adding to Cart..."
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}">
                    ADD TO CART 
                    <span class="c-price">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="c-price-s" style="text-decoration: line-through">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </button>

                {% when 'shipping' %}
                  <div class="rich-text__text">
                    {{ block.settings.text }}
                  </div>

                {% when 'payment_icons' %}
                  <div class="payment_icons">
                    <img src="{{ block.settings.icon | image_url }}" alt="Payment Icons" width="auto" height="auto" loading="eager" fetchpriority="high">
                  </div>

                {% when 'custom_liquid' %}
                  <div class="custom-liquid-block">
                    {{ block.settings.custom_liquid }}
                  </div>

                {% when 'addons' %}
                  {% assign addonIndex = addonIndex | plus: 1 %}
                  {% assign addons_collection = block.settings.collection %}
                  <h3 class="addons_title">{{ block.settings.title }}</h3>
                  <div class="addons_slider swiper-container">
                    <div class="addons_custom swiper-wrapper">
                      {% for product in addons_collection.products %}
                        <div class="addon_product swiper-slide">
                          <div class="addon_product_details">
                            <div class="addon_image">
                              {{ product.featured_image | image_url: width: '75' | image_tag }}
                            </div>
                            <div class="addon_product-info">
                              <div class="addon_title_with-price">
                                <h3 class="product_addon_title">{{ product.title }}</h3>
                                <div class="test2">
                                  <p class="product_addon-price">{{ product.price | money }}</p>
                                  <p class="product_addon-price test">{{ product.compare_at_price | money }}</p>
                                  <span class="addon_popular-tag">POPULAR</span>
                                </div>
                              </div>
                              <div class="upsell-slider-toggle">
                                <input type="checkbox" name="addition" class="upsellSliderIOSToggleInput" id="upsellSliderIOSToggleInput--{{ product.variants.first.id }}" value="addition">
                                <label class="upsell-slider-input-toggle" for="upsellSliderIOSToggleInput--{{ product.variants.first.id }}" data-variant-id="{{ product.variants.first.id }}" data-label-id="{{ addonIndex }}" data-product-handle="land-and-sea-snapback">
                                  <span class="sr-only">Toggle</span>
                                  <i class="toggler"></i>
                                </label>
                              </div>
                            </div>
                          </div>
                        </div>
                      {% endfor %}
                    </div>
                    <div class="addons_bottom">
                      <div class="swiper-pagination"></div>
                      <div class="swiper_arrows">
                        <div class="slider__prev">
                          <svg class="flickity-button-icon" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50 L 70,10 L 60,0 Z" class="arrow"></path></svg>
                        </div>
                        <div class="slider__next">
                          <svg class="flickity-button-icon" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50 L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180)"></path></svg>
                        </div>
                      </div>
                    </div>
                  </div>

{% when 'luggage_sets' %}
  <div class="lg-set-container">
    <h3 class="lg-set-title">{{ block.settings.title }}</h3>
    <div class="lg-set-products-row">
      {% for i in (1..3) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign name_key = 'product_' | append: i | append: '_name' %}
        {% assign badge_key = 'product_' | append: i | append: '_badge' %}
        {% assign selected_key = 'product_' | append: i | append: '_selected' %}
        {% if block.settings[product_key] != blank %}
          <div class="swiper-slide">
            <div class="lg-set-product-card {% if block.settings[selected_key] %}lg-set-selected{% endif %}" 
                 data-variant-id="{{ block.settings[product_key].selected_or_first_available_variant.id }}"
                 data-product-handle="{{ block.settings[product_key].handle }}">
              <div class="lg-set-image-wrapper">
                {% if block.settings[product_key].featured_image %}
                  <img src="{{ block.settings[product_key].featured_image | image_url: width: 120 }}" 
                       alt="{{ block.settings[product_key].title }}"
                       class="lg-set-product-image"
                       loading="lazy">
                {% endif %}
              </div>
              <div class="lg-set-product-info">
                <h4 class="lg-set-product-name">{{ block.settings[name_key] }}</h4>
                {% if block.settings[badge_key] != blank %}
                  <span class="lg-set-badge">{{ block.settings[badge_key] }}</span>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Wrapper for Pagination and Arrows in Same Row -->
    <div class="luggage_controls_wrapper">
      <!-- Pagination -->
      <div class="luggage_sets_pagination swiper-pagination"></div>
      
      <!-- Arrows (Same as Add-ons) -->
      <div class="swiper_arrows">
        <div class="slider__prev luggage-prev">
          <svg class="flickity-button-icon" viewBox="0 0 100 100">
            <path d="M 10,50 L 60,100 L 70,90 L 30,50 L 70,10 L 60,0 Z" class="arrow"></path>
          </svg>
        </div>
        <div class="slider__next luggage-next">
          <svg class="flickity-button-icon" viewBox="0 0 100 100">
            <path d="M 10,50 L 60,100 L 70,90 L 30,50 L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180)"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <style>
    @media (min-width: 767px){
    .luggage_controls_wrapper{
      display: none !important;
    }

    }

    /* Flex container for pagination and arrows in same row */
    .luggage_controls_wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }

    /* Pagination styles */
   

    /* Arrow styles matching add-ons */
    .luggage_controls_wrapper .swiper_arrows {
      display: flex;
      gap: 10px;
    }

    .luggage-prev, .luggage-next {
      cursor: pointer;
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .luggage-prev svg, .luggage-next svg {
      width: 100%;
      height: 100%;
    }
  </style>
  
  <style>
  @media (min-width: 1441px){
  .lg-set-products-row .swiper-slide{
      width: 30% !important;
  }
}
@media (max-width: 1440px) {
  .lg-set-products-row {
    display: flex !important;
  }

  .lg-set-product-card {
    width: 100% !important;
  }

  .swiper-pagination {
    margin-top: 10px !important;
    text-align: center !important;
  }
}
</style>

                {% when 'faqs' %}
                  <div class="faq-item faq-pro">
                    <div class="faq-question">
                      <span>{{ block.settings.question }}</span>
                      <span class="faq-icon">
                        <svg class="plus" width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
