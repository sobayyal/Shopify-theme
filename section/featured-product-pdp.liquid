  // ================================
  if (window.innerWidth <= 767 && document.querySelector('#page-pdp')) {
    
    // Delay initialization to not block main thread
    setTimeout(function() {
      const mainSlider = document.querySelector('#page-pdp .main-slider');
      const zoomModal = document.getElementById('zoomModalPDP');
      const zoomImage = document.getElementById('zoomImagePDP');
      const zoomImageWrapper = document.querySelector('.zoom-image-wrapper');
      const zoomClose = document.getElementById('zoomClosePDP');
      const zoomPrev = document.getElementById('zoomPrevPDP');
      const zoomNext = document.getElementById('zoomNextPDP');
      
      if (!mainSlider || !zoomModal) return;
      
      let currentZoomIndex = 0;
      let allImages = [];
      let scale = 1;
      let lastTap = 0;
      let isDragging = false;
      let startX = 0;
      let startY = 0;
      let translateX = 0;
      let translateY = 0;
      let currentTranslateX = 0;
      let currentTranslateY = 0;
      let initialDistance = 0;
      let initialScale = 1;
      let zoomIconsAdded = false;
      
      // Collect images ONCE
      function collectImagesOnce() {
        if (allImages.length > 0) return;
        
        const slides = mainSlider.querySelectorAll('.product_image_wrapper');
        slides.forEach(slide => {
          const img = slide.querySelector('.product_images');
          if (img && img.src) {
            allImages.push(img.src);
          }
        });
        console.log(' Collected images:', allImages.length);
      }
      
      // Reset transform
      function resetTransform() {
        scale = 1;
        translateX = 0;
        translateY = 0;
        currentTranslateX = 0;
        currentTranslateY = 0;
        if (zoomImage) {
          zoomImage.style.transform = 'scale(1) translate(0, 0)';
          zoomImage.style.transformOrigin = 'center center';
        }
        if (zoomImageWrapper) {
          zoomImageWrapper.style.overflow = 'hidden';
        }
      }
      
      // Update transform
      function updateTransform() {
        if (!zoomImage) return;
        zoomImage.style.transform = `scale(${scale}) translate(${translateX}px, ${translateY}px)`;
        
        if (zoomImageWrapper) {
          if (scale > 1) {
            zoomImageWrapper.style.overflow = 'auto';
          } else {
            zoomImageWrapper.style.overflow = 'hidden';
          }
        }
      }
      
      // Add zoom icons ONCE
      function addZoomIconsOnce() {
        if (zoomIconsAdded) return;
        
        const slides = mainSlider.querySelectorAll('.product_image_wrapper');
        
        slides.forEach((slide, index) => {
          const img = slide.querySelector('.product_images');
          if (!img) return;
          
          const zoomIcon = document.createElement('div');
          zoomIcon.className = 'zoom-icon-trigger';
          zoomIcon.setAttribute('data-image-index', index);
          zoomIcon.innerHTML = '<svg aria-hidden="true" focusable="false" fill="none" width="12" class="icon icon-plus" viewBox="0 0 12 12"><path d="M6 0v12M0 6h12" stroke="currentColor" stroke-width="1"></path></svg>';
          
          slide.appendChild(zoomIcon);
        });
        
        zoomIconsAdded = true;
        console.log(' Zoom icons added');
      }
      
      // Single delegated event listener for all zoom icons
      mainSlider.addEventListener('click', function(e) {
        const zoomIcon = e.target.closest('.zoom-icon-trigger');
        if (!zoomIcon) return;
        
        e.stopPropagation();
        const index = parseInt(zoomIcon.getAttribute('data-image-index'));
        
        collectImagesOnce();
        currentZoomIndex = index;
        
        console.log(' Zoom clicked on index:', currentZoomIndex);
        
        if (allImages[currentZoomIndex]) {
          zoomImage.src = allImages[currentZoomIndex];
          resetTransform();
          zoomModal.classList.add('active');
          document.body.classList.add('zoom-modal-open');
        } else {
          console.error(' No image found at index:', currentZoomIndex);
        }
      });
      
      // Initialize
      collectImagesOnce();
      addZoomIconsOnce();
      
      // Re-collect images if slider changes (debounced)
      if (typeof $ !== 'undefined' && $(mainSlider).length) {
        let slideChangeTimeout;
        $(mainSlider).on('beforeChange', function() {
          clearTimeout(slideChangeTimeout);
          slideChangeTimeout = setTimeout(() => {
            allImages = [];
            collectImagesOnce();
          }, 500);
        });
      }
      
      // Close modal
      if (zoomClose) {
        zoomClose.addEventListener('click', function() {
          zoomModal.classList.remove('active');
          document.body.classList.remove('zoom-modal-open');
          resetTransform();
        });
      }
      
      // Previous image
      if (zoomPrev) {
        zoomPrev.addEventListener('click', function() {
          currentZoomIndex = (currentZoomIndex - 1 + allImages.length) % allImages.length;
          zoomImage.src = allImages[currentZoomIndex];
          resetTransform();
          console.log(' Previous image index:', currentZoomIndex);
        });
      }
      
      // Next image
      if (zoomNext) {
        zoomNext.addEventListener('click', function() {
          currentZoomIndex = (currentZoomIndex + 1) % allImages.length;
          zoomImage.src = allImages[currentZoomIndex];
          resetTransform();
          console.log(' Next image index:', currentZoomIndex);
        });
      }
      
      // Double tap to zoom (3x)
      if (zoomImage) {
        zoomImage.addEventListener('touchend', function(e) {
          const currentTime = new Date().getTime();
          const tapLength = currentTime - lastTap;
          
          if (tapLength < 300 && tapLength > 0) {
            e.preventDefault();
            
            if (scale === 1) {
              scale = 3;
              
              const touch = e.changedTouches[0];
              const rect = zoomImage.getBoundingClientRect();
              const x = ((touch.clientX - rect.left) / rect.width) * 100;
              const y = ((touch.clientY - rect.top) / rect.height) * 100;
              
              zoomImage.style.transformOrigin = `${x}% ${y}%`;
              translateX = 0;
              translateY = 0;
              updateTransform();
              
              console.log(' Zoomed in 3x at position:', x, y);
            } else {
              resetTransform();
              console.log(' Zoomed out to 1x');
            }
          }
          
          lastTap = currentTime;
        });
        
        // Touch start - drag or pinch
        zoomImage.addEventListener('touchstart', function(e) {
          if (e.touches.length === 1 && scale > 1) {
            isDragging = true;
            startX = e.touches[0].clientX - currentTranslateX;
            startY = e.touches[0].clientY - currentTranslateY;
            zoomImage.style.transition = 'none';
          } else if (e.touches.length === 2) {
            isDragging = false;
            e.preventDefault();
            initialDistance = Math.hypot(
              e.touches[0].pageX - e.touches[1].pageX,
              e.touches[0].pageY - e.touches[1].pageY
            );
            initialScale = scale;
          }
        });
        
        // Touch move - dragging or pinching
        zoomImage.addEventListener('touchmove', function(e) {
          if (e.touches.length === 1 && isDragging && scale > 1) {
            e.preventDefault();
            translateX = (e.touches[0].clientX - startX) * 0.5;
            translateY = (e.touches[0].clientY - startY) * 0.5;
            
            const maxTranslate = (scale - 1) * 150;
            translateX = Math.max(-maxTranslate, Math.min(maxTranslate, translateX));
            translateY = Math.max(-maxTranslate, Math.min(maxTranslate, translateY));
            
            updateTransform();
          } else if (e.touches.length === 2) {
            e.preventDefault();
            
            const currentDistance = Math.hypot(
              e.touches[0].pageX - e.touches[1].pageX,
              e.touches[0].pageY - e.touches[1].pageY
            );
            
            scale = Math.min(Math.max(1, initialScale * (currentDistance / initialDistance)), 5);
            updateTransform();
            
            console.log(' Pinch zoom scale:', scale.toFixed(2));
          }
        });
        
        // Touch end
        zoomImage.addEventListener('touchend', function(e) {
          if (isDragging) {
            isDragging = false;
            currentTranslateX = translateX;
            currentTranslateY = translateY;
            zoomImage.style.transition = 'transform 0.3s ease';
          }
        });
      }
      
    }, 800);
  }
  
});
