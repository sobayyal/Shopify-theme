  <!-- STICKY BAR -->
  <div class="pro-bar">
    <div class="pro-bar-inner">
      <h3>{{ product.title }}</h3>
      <div class="bar-color">
        <span class="var-colo">{{ product.selected_or_first_available_variant.option1 | default: 'Black' }}</span>
        <span class="product-price">
          {% if product.compare_at_price > product.price %}
            <span>{{ product.price | money }}</span>
            <span class="original-prics" style="text-decoration: line-through; color: #00000066;">{{ product.compare_at_price | money }}</span>
