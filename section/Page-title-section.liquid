<section id="listicles-page-timer">
  <div class="countdown-condensed" style="{% render 'surface', background: section.settings.background, text_color: section.settings.text_color %}">
  <div class="countdown-condensed__text">
      <div class="prose">
        <p class="h6">Black Friday Sale Up To $320 Off</p>
      </div>

    {%- if section.settings.link_text != blank -%}
      <a href="{{ section.settings.link_url }}" class="h6 link sm-max:hidden">{{ section.settings.link_text }}</a>
    {%- endif -%}
  </div>

  {%- assign accessibility_expiration_date = section.settings.expiration_date | date: format: 'date_at_time' -%}
  {%- assign accessibility_text = 'sections.countdown_timer.expires_accessibility_text' | t: expiration_date: accessibility_expiration_date -%}

  <countdown-timer class="countdown-condensed__timer" role="timer" aria-label="{{ accessibility_text | escape }}" expires-at="{{ section.settings.expiration_date | date: '%FT%T%:z' | escape }}" expiration-behavior="{{ section.settings.expiration_behavior }}">
    <div id="countdown-timer-{{ section.id }}" class="countdown-condensed__timer">
    <!-- <div class="countdown-condensed__timer-item countdown-condensed__timer-item--days" aria-hidden="true">
      <countdown-timer-flip type="days" class="countdown-condensed__timer-flip" id="days">00</countdown-timer-flip>
      <span class="countdown-condensed__timer-unit">{{ 'sections.countdown_timer.days' | t }}</span>
    </div> -->

    <!-- <span class="countdown-condensed__timer-item-separator" aria-hidden="true">:</span>
 -->
    <div class="countdown-condensed__timer-item" aria-hidden="true">
      <countdown-timer-flip type="hours" class="countdown-condensed__timer-flip" id="hours">00</countdown-timer-flip>
      <span class="countdown-condensed__timer-unit">{{ 'sections.countdown_timer.hours' | t }}</span>
    </div>

    <span class="countdown-condensed__timer-item-separator" aria-hidden="true">:</span>

    <div class="countdown-condensed__timer-item" aria-hidden="true">
      <countdown-timer-flip type="minutes" class="countdown-condensed__timer-flip" id="minutes">00</countdown-timer-flip>
      <span class="countdown-condensed__timer-unit">{{ 'sections.countdown_timer.minutes' | t }}</span>
    </div>

    <span class="countdown-condensed__timer-item-separator" aria-hidden="true">:</span>

    <div class="countdown-condensed__timer-item" aria-hidden="true">
      <countdown-timer-flip type="seconds" class="countdown-condensed__timer-flip" id="seconds">00</countdown-timer-flip>
      <span class="countdown-condensed__timer-unit">{{ 'sections.countdown_timer.seconds' | t }}</span>
    </div>
    </div>
  </countdown-timer>
</div>

</section>
<div class="section-spacing section-spacing--tight" id="section-article-title">
  <div class="container container--xs">
    <div class="section-stack" style="gap:.5rem; --section-stack-gap:1.5rem;">
        <div class="section-header ">
          <h1 class="article-title" style="text-align: left;">{{ page.title }}</h1>
        </div>
      <div class="author-details">
            <div class="author-image">
             <img src="{{ section.settings.auth_image | img_url: 'medium' }}" alt="Author Image">
            </div>
            <div class="auth-info">
            <div class="author-name">
              By <strong>{{ section.settings.auth_name }}</strong>
            </div>
              <div> <span class="h6 text-subdued">Last Updated</span> <span class="h6 text-subdued"><time>{{ section.settings.article_date }}</time></span>
              </div>
            </div>
          </div>
      <div class="article-content">

            <div class="article-sumary">
              <span>
                {{ section.settings.article_summary }}
              </span>
            </div>
            
          </div>

      {%- if page.content != empty %}
        <div class="prose">
          {{- page.content -}}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Page Title Flo",
    "settings": [
      {
      "type": "image_picker",
      "id": "auth_image",
      "label": "Author Image"
    },
    {
      "type": "text",
      "id": "auth_name",
      "label": "Author Name"
    },
      {
        "type": "text",
        "id": "article_date",
        "label": "Article Date"
      },
    {
      "type": "richtext",
      "id": "article_summary",
      "label": "Article Summary"
    }
    ],
    "presets": [
    {
      "name": "Page Title Nobl",
      "category": "Custom"
    }
  ]
  }
{% endschema %}
<style>
  span.h6.text-subdued {
    font-family: 'Montserrat';
    font-size: 13px;
    color: #000;
}
</style>