<div
  class="mothers-day-hero {% if section.settings.size == 'large' %}--big{% else %}--small{% endif %}"
  id="{{ section.settings.section_id }}"
>
  <div class="mothers-day-hero__grid --half">
    <div class="mothers-day-hero__bg">
      <div class="mothers-day-hero__content {% if section.settings.hide_content_mobile %} hide--content-mobile{% endif %}">
        {% if section.settings.show_mobile_logo %}
          <div class="mothers-day-hero__mobile">
            {% if section.settings.mobile_logo != blank %}
              <picture>
                <source media="(min-width: 768px)" srcset="{{ section.settings.mobile_logo | img_url: '768x' }}, {{ section.settings.mobile_logo | img_url: '1536x' }} 2x">
                <source media="(min-width: 375px)" srcset="{{ section.settings.mobile_logo | img_url: '375x' }}, {{ section.settings.mobile_logo | img_url: '750x' }} 2x">
                <img 
                  src="{{ section.settings.mobile_logo | img_url: '375x' }}" 
                  alt="{{ section.settings.mobile_logo.alt | escape }}" 
                  width="{{ section.settings.mobile_logo.width }}" 
                  height="{{ section.settings.mobile_logo.height }}" 
                  loading="lazy"
                  style="object-position: 50% 50%"
                  fetchpriority="auto"
                >
              </picture>
            {% endif %}
          </div>
        {% endif %}
        
        {% if section.settings.show_overline %}
          <div class="mothers-day-hero__overline {% if section.settings.show_overline %} --show{% endif %}">
            {% if section.settings.overline_icon != blank %}
              <picture>
                <source media="(min-width: 75px)" srcset="{{ section.settings.overline_icon | img_url: '75x' }}, {{ section.settings.overline_icon | img_url: '150x' }} 2x">
                <img 
                  src="{{ section.settings.overline_icon | img_url: '75x' }}" 
                  alt="{{ section.settings.overline_text | escape }}" 
                  width="{{ section.settings.overline_icon.width }}" 
                  height="{{ section.settings.overline_icon.height }}" 
                  loading="lazy"
                  style="object-position: 50% 50%"
                  fetchpriority="auto"
                >
              </picture>
            {% endif %}
            {{ section.settings.overline_text }}
          </div>
        {% endif %}
        
        <h2 class="mothers-day-hero__title canela">
          {{ section.settings.heading }}
        </h2>
        
        <div class="mothers-day-hero__description">
          {{ section.settings.description }}
        </div>
        
        {% if section.settings.show_button %}
          <div class="mothers-day-hero__buttons">
            <a href="{{ section.settings.button_link }}" class="mothers-day-hero__button">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
    
    <div class="mothers-day-hero__shadow"></div>
    
    {% if section.settings.desktop_image != blank %}
      <div class="mothers-day-hero__image --desktop">
        <picture>
          {% if section.settings.image_responsive %}
            <source media="(min-width: 1512px)" srcset="{{ section.settings.desktop_image | img_url: '1512x' }}, {{ section.settings.desktop_image | img_url: '3024x' }} 2x">
            <source media="(min-width: 1024px)" srcset="{{ section.settings.desktop_image | img_url: '1024x' }}, {{ section.settings.desktop_image | img_url: '2048x' }} 2x">
            <source media="(min-width: 768px)" srcset="{{ section.settings.desktop_image | img_url: '768x' }}, {{ section.settings.desktop_image | img_url: '1536x' }} 2x">
            <source media="(min-width: 375px)" srcset="{{ section.settings.desktop_image | img_url: '375x' }}, {{ section.settings.desktop_image | img_url: '750x' }} 2x">
          {% endif %}
          <img 
            src="{{ section.settings.desktop_image | img_url: 'master' }}" 
            alt="{{ section.settings.desktop_image.alt | escape }}" 
            width="{{ section.settings.desktop_image.width }}" 
            height="{{ section.settings.desktop_image.height }}" 
            loading="eager"
            style="object-position: {{ section.settings.image_position }}"
            fetchpriority="auto"
          >
        </picture>
      </div>
    {% endif %}
    
    {% if section.settings.mobile_image != blank %}
      <div class="mothers-day-hero__image --mobile">
        <picture>
          <source media="(min-width: 375px)" srcset="{{ section.settings.mobile_image | img_url: '375x' }}, {{ section.settings.mobile_image | img_url: '750x' }} 2x">
          <img 
            src="{{ section.settings.mobile_image | img_url: 'master' }}" 
            alt="{{ section.settings.mobile_image.alt | escape }}" 
            width="{{ section.settings.mobile_image.width }}" 
            height="{{ section.settings.mobile_image.height }}" 
            loading="eager"
            style="object-position: {{ section.settings.mobile_position | default: section.settings.image_position }}"
            fetchpriority="auto"
          >
        </picture>
      </div>
    {% endif %}
  </div>
</div>

