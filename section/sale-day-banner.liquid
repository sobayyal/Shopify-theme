{% comment %}
  Mother's Day Hero Section - Based on HexClad reference code but with custom classes
  This is a direct implementation of the hero banner with split layout design
{% endcomment %}

<style>
.mothers-day-hero{z-index:1;color:#fff;background-color:#002921;scroll-margin-top:6.25rem;position:relative}
.mothers-day-hero.--big{height:31.75rem}
.mothers-day-hero.--big .mothers-day-hero__grid{min-height:31.75rem}
.mothers-day-hero.--small{height:36.125rem}
.mothers-day-hero.--small .mothers-day-hero__grid{height:36.125rem}
.mothers-day-hero__grid{height:100%;display:grid}
.mothers-day-hero__grid.--half{grid-template-columns:minmax(0,1fr)}
.mothers-day-hero__grid.--half .mothers-day-hero__image{position:absolute;top:0;left:0}
.mothers-day-hero__grid.--full-width{grid-template-columns:minmax(0,1fr)}
.mothers-day-hero__grid.--full-width .mothers-day-hero__bg{background:0 0!important}
.mothers-day-hero__grid.--full-width .mothers-day-hero__image{position:absolute;top:0;left:0}
.mothers-day-hero__bg{padding:0;position:relative;overflow:hidden}
.mothers-day-hero__image{z-index:-1;width:100%;height:100%}
.mothers-day-hero__image.--desktop{display:none}
.mothers-day-hero__image.--mobile{display:block}
.mothers-day-hero__image img{object-fit:cover;width:100%;height:100%;position:absolute;top:0;left:0}
.mothers-day-hero__gif{z-index:1;display:block;position:relative}
.mothers-day-hero__gif picture{position:absolute}
.mothers-day-hero__shadow{z-index:0;background-color:#002921;width:100%;height:100%;position:absolute;top:0;left:0}
.mothers-day-hero__content{text-align:center;z-index:2;flex-direction:column;align-items:center;gap:.75rem;width:100%;max-width:37.5rem;height:100%;margin:0 auto;padding:1.25rem 1.75rem;display:flex;position:relative}
.mothers-day-hero__mobile{width:100%;height:2.8125rem;display:block;position:relative}
.mothers-day-hero__mobile img{object-fit:contain;object-position:center;width:100%;height:100%;position:absolute;top:0;left:0}
.mothers-day-hero__overline{font-size:20px;font-weight:600;display:none}
.mothers-day-hero__overline.--show{align-items:center;gap:.3125rem;display:flex}
.mothers-day-hero__overline picture{align-items:center;display:flex}
.mothers-day-hero__overline picture img{height:1.875rem}
.mothers-day-hero__title{margin:0;font-size:44px;font-weight:500;line-height:normal;}
.mothers-day-hero__title span{font-size:clamp(1.75rem,1.2965rem + 1.93492vw,3.125rem)}
.mothers-day-hero__description{padding:0 .625rem;17px;font-weight:500;line-height:normal}
.mothers-day-hero__description p{color:inherit;line-height:1.5}
.mothers-day-hero__description p:last-child{margin-bottom:0}
.mothers-day-hero__buttons{margin:auto 0 0}
.mothers-day-hero__button{cursor:pointer;white-space:nowrap;color:#b2292e;background-color:#fff;border-radius:1.875rem;justify-content:center;align-items:center;gap:.625rem;width:fit-content;height:clamp(3rem,2.83509rem + .703606vw,3.5rem);margin-top:auto;padding:.75rem 2.5rem;font-size:1.25rem;font-weight:600;display:flex}
.mothers-day-hero__button:active,.mothers-day-hero__button:focus,.mothers-day-hero__button:hover{color:#fff;background-color:#b2292e}
.mothers-day-hero__button:active path,.mothers-day-hero__button:focus path,.mothers-day-hero__button:hover path{stroke:#fff}
@media print,screen and (min-width:64em){.mothers-day-hero.--big{height:31.75rem}
.mothers-day-hero.--big .mothers-day-hero__grid{min-height:31.75rem}
.mothers-day-hero.--small{height:25rem}
.mothers-day-hero.--small .mothers-day-hero__grid{height:25rem}
.mothers-day-hero__grid.--half{grid-template-columns:minmax(0,1fr) minmax(0,1fr)}
.mothers-day-hero__grid.--half .mothers-day-hero__image{position:relative}
.mothers-day-hero__bg{padding:2.5rem 4.375rem 2.5rem 5rem}
.mothers-day-hero__image.--desktop{display:block}
.mothers-day-hero__image.--mobile{display:none}
.mothers-day-hero__gif{display:none}
.mothers-day-hero__content{text-align:left;justify-content:center;align-items:flex-start;gap:1.25rem;margin:0;padding:0}
.mothers-day-hero__mobile{display:none}
.mothers-day-hero__overline{align-items:center;gap:.3125rem;display:flex}
.mothers-day-hero__overline picture img{height:auto}
.mothers-day-hero__description{padding:0}
.mothers-day-hero__button{margin-top:0;font-size:1.25rem}
}

/* Section-specific styles */
#shopify-section-{{ section.id }} .mothers-day-hero__shadow {
  background: transparent;
}

@media screen and (min-width: 1024px) {
  #shopify-section-{{ section.id }} .mothers-day-hero__shadow {
    background: linear-gradient(to right,
    rgba(0, 0, 0, 0.0) 0%,
    rgba(0, 0, 0, 0.0) 40%,
    rgba(0, 0, 0, 0) 100%);
  }
  
  #shopify-section-{{ section.id }} .mothers-day-hero__bg {
    background-color: #031d1b;
  }
}

@media screen and (max-width: 1023px) {
  #shopify-section-{{ section.id }} .mothers-day-hero {
    scroll-margin-top: var(--header-height, 102px);
  }
  
  #shopify-section-{{ section.id }} .mothers-day-hero__bg {
    background-color: transparent;
  }
}

